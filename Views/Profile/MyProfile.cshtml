@model IBlogs.Models.ViewModels.ProfileRequest
@using IBlogs.Models.Domain;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Profile> signInManager
<div class="pozadina">
    <hr />
    <div class="row">
        <div class="col-md-4">
            
            <div class="bg-blur">
                <h3 class="text-light ms-3" style="position:absolute;top:30%;">@Model.Name @Model.LastName</h3>
                <br />
                <p class="text-light ms-3" style="position:absolute;top:40%;">
                    @Model.About
                </p>
            </div>
        </div>
        <div class="col-md-8" style="margin-top:10%;">
            @if (signInManager.UserManager.GetUserAsync(User).Result.ProfileId == Model.ProfileId)
            {
                <div style="width: 100%; height: 100vh;">
                    <div class="text-end me-3 mb-3">
                        <a class="btn bg-dark text-light button" asp-controller="Posts" asp-action="NewBlog" asp-route-id="@signInManager.UserManager.GetUserAsync(User).Result.ProfileId">Add Blog</a>
                    </div>
                    <div class="text-end me-3 mb-3">
                        <a class="btn bg-dark text-light button" asp-controller="Profile" asp-action="Edit" asp-route-id="@signInManager.UserManager.GetUserAsync(User).Result.ProfileId">Edit Profile</a>
                    </div>
                    <div class="text-end me-3 mb-3">
                        <a class="btn bg-danger text-light button" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>
