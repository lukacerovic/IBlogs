@model IBlogs.Models.ViewModels.EditRequest

<div class="container text-light mb-5">

    <div class="row">

        <form method="post">
            <div class="col-12 col-lg-6 mt-5">
                <div class="col text-end" style="position:absolute;right:5%;width:40%;">
                    <div class="text-center">
                        <label>Gender</label>
                        <select class="form-select" aria-label="Gender" asp-for="@Model.Gender">
                            <option selected>Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <label class="mt-3">About</label>
                        <textarea class="form-control" style="height:200px;width:100%;" asp-for="@Model.About"></textarea>

                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row">
                    <div class="col">
                        <label for="first-name">First name:</label>
                        <input type="text" class="form-control" id="first-name" asp-for="@Model.Name">
                    </div>
                    <div class="col">
                        <label for="last-name">Last name:</label>
                        <input type="text" class="form-control" id="last-name" asp-for="@Model.LastName">
                    </div>

                </div>

                <div class="mb-3">
                    <label class="form-label">
                        Email
                    </label>
                    <input type="email" id="email" class="form-control" asp-for="@Model.Email">
                </div>

                <div class="mb-3">
                    <label class="form-label">
                        Password
                    </label>
                    <input type="text" id="password" class="form-control" asp-for="@Model.Password" />
                </div>
                <div class="mb-3">
                    <label class="form-label">
                        Retype Password
                    </label>
                    <input type="text" id="password" class="form-control" asp-for="@Model.ConfirmPassword" />
                </div>

            </div>
            <div class="mb-5 text-center">
                <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary mt-5">Update Changes</button>
            </div>
        </form>
    </div>
</div>

