@page
@model RegisterModel

<div class="container text-light mt-3">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
        
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row">
                    <div class="col">
                        <label for="first-name">First name:</label>
                        <input type="text" class="form-control" id="first-name" asp-for="Input.Name">
                    </div>
                    <div class="col">
                        <label for="last-name">Last name:</label>
                        <input type="text" class="form-control" id="last-name" asp-for="Input.LastName">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">
                        Email
                    </label>
                    <input type="email" id="email" class="form-control" asp-for="Input.Email">
                </div>

                <div class="mb-3">
                    <label class="form-label">
                        Password
                    </label>
                    <input type="password" id="password" class="form-control" asp-for="Input.Password" />
                </div>
                <div class="mb-3">
                    <label class="form-label">
                        Retype Password
                    </label>
                    <input type="password" id="password" class="form-control" asp-for="Input.ConfirmPassword" />
                </div>
                <select class="form-select" aria-label="Gender" asp-for="Input.Gender">
                    <option selected>Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-5 mb-5">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
